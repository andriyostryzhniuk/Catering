<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<Group fx:id="rootGroup" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
       fx:controller="ostryzhniuk.andriy.catering.order.view.OrderDetailsController">
    <children>
        <Rectangle arcHeight="15.0" arcWidth="15.0" fill="#0000008c" height="500.0" stroke="#ffffffe5"
                   strokeType="INSIDE" strokeWidth="1.5" width="500.0"/>
        <GridPane alignment="CENTER" prefHeight="500.0" prefWidth="500.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES"/>
            </rowConstraints>
        </GridPane>
        <GridPane alignment="TOP_RIGHT" layoutX="50.0" layoutY="20.0">
            <children>
                <TableView fx:id="orderingTableView" prefHeight="400.0" prefWidth="400.0" GridPane.rowIndex="1">
                    <columns>
                        <TableColumn fx:id="orderingDishesNameCol" maxWidth="220.0" minWidth="220.0" prefWidth="220.0"
                                     text="Назва страви"/>
                        <TableColumn fx:id="orderingNumberOfServingsCol" maxWidth="70.0" minWidth="70.0"
                                     prefWidth="70.0" text="Порції"/>
                        <TableColumn fx:id="sumPriceCol" maxWidth="108.0" minWidth="108.0" prefWidth="108.0"
                                     text="Вартість"/>
                    </columns>
                </TableView>
                <GridPane>
                    <children>
                        <Label text="Загальна вартість:" textFill="WHITE" GridPane.columnIndex="1"
                               GridPane.halignment="RIGHT">
                            <padding>
                                <Insets bottom="7.0"/>
                            </padding>
                            <GridPane.margin>
                                <Insets right="10.0"/>
                            </GridPane.margin>
                        </Label>
                        <TextField fx:id="sumPriceTextField" editable="false" promptText="Сума"
                                   GridPane.columnIndex="2">
                            <GridPane.margin>
                                <Insets bottom="7.0"/>
                            </GridPane.margin>
                        </TextField>
                    </children>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="110.0" minWidth="110.0" prefWidth="110.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="110.0" minWidth="110.0" prefWidth="110.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints maxHeight="24.0" minHeight="24.0" prefHeight="24.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                </GridPane>
                <GridPane GridPane.rowIndex="2">
                    <children>
                        <Button fx:id="escapeButton" maxHeight="25.0" maxWidth="77.0" minHeight="25.0" minWidth="77.0"
                                mnemonicParsing="false" onAction="#close" prefHeight="25.0" prefWidth="77.0"
                                text="Закрити" GridPane.columnIndex="2"/>
                        <Button fx:id="saveButton" maxHeight="25.0" maxWidth="77.0" minHeight="25.0" minWidth="77.0"
                                mnemonicParsing="false" onAction="#editOrdering" prefHeight="25.0" prefWidth="77.0"
                                text="Редагувати" GridPane.columnIndex="1">
                            <GridPane.margin>
                                <Insets right="5.0"/>
                            </GridPane.margin>
                        </Button>
                    </children>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES"/>
                        <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="82.0" minWidth="82.0"
                                           prefWidth="82.0"/>
                        <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="77.0" minWidth="77.0"
                                           prefWidth="77.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints valignment="BOTTOM" vgrow="SOMETIMES"/>
                    </rowConstraints>
                </GridPane>
                <Label text="Замовлення №" textFill="WHITE">
                    <padding>
                        <Insets bottom="7.0"/>
                    </padding>
                </Label>
            </children>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="400.0" minWidth="400.0" prefWidth="400.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="24.0" minHeight="24.0" prefHeight="24.0" vgrow="SOMETIMES"/>
                <RowConstraints vgrow="SOMETIMES"/>
                <RowConstraints minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES"/>
            </rowConstraints>
        </GridPane>
    </children>
</Group>

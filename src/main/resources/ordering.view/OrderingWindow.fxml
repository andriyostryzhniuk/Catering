<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="rootBorderPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ostryzhniuk.andriy.catering.ordering.view.OrderingWindowController">
    <center>
        <GridPane fx:id="rootGridPane" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="530.0" minWidth="530.0" prefWidth="530.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="200.0" prefWidth="200.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="400.0" minWidth="400.0" prefWidth="400.0"/>
                <ColumnConstraints hgrow="SOMETIMES"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="500.0" prefHeight="500.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <padding>
                <Insets left="10.0" right="10.0"/>
            </padding>
            <children>
                <GridPane GridPane.columnIndex="2">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints maxHeight="24.0" minHeight="24.0" prefHeight="24.0" vgrow="SOMETIMES"/>
                        <RowConstraints vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <TableView fx:id="orderingTableView" prefHeight="400.0" prefWidth="400.0" GridPane.rowIndex="1">
                            <columns>
                                <TableColumn fx:id="orderingDishesNameCol" maxWidth="268.0" minWidth="268.0"
                                             prefWidth="268.0" text="Назва страви"/>
                                <TableColumn fx:id="orderingNumberOfServingsCol" maxWidth="130.0" minWidth="130.0"
                                             prefWidth="130.0" text="Кількість порцій"/>
                            </columns>
                        </TableView>
                        <Label text="Замовлення:">
                            <padding>
                                <Insets bottom="7.0"/>
                            </padding>
                        </Label>
                    </children>
                </GridPane>
            </children>
        </GridPane>
    </center>
    <top>
        <GridPane fx:id="controlsGridPane" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="170.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="300.0" minWidth="270.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="180.0" minWidth="150.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="180.0" minWidth="150.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="180.0" minWidth="150.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="180.0" minWidth="150.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <DatePicker fx:id="datePicker" minWidth="150.0" prefWidth="150.0" promptText="Дата"
                            GridPane.rowIndex="1"/>
                <Label text="Дата:" GridPane.halignment="LEFT">
                    <GridPane.margin>
                        <Insets/>
                    </GridPane.margin>
                </Label>
                <Label text="Клієнт:" GridPane.columnIndex="1" GridPane.halignment="LEFT">
                    <GridPane.margin>
                        <Insets/>
                    </GridPane.margin>
                </Label>
                <Label text="Вартість:" GridPane.columnIndex="2" GridPane.halignment="LEFT">
                    <GridPane.margin>
                        <Insets/>
                    </GridPane.margin>
                </Label>
                <Label text="Знижка: (%)" GridPane.columnIndex="3" GridPane.halignment="LEFT">
                    <GridPane.margin>
                        <Insets/>
                    </GridPane.margin>
                </Label>
                <Label text="До оплати:" GridPane.columnIndex="4" GridPane.halignment="LEFT"/>
                <Label text="Сплачено:" GridPane.columnIndex="5" GridPane.halignment="LEFT"/>
                <TextField fx:id="costTextField" maxWidth="130.0" minWidth="130.0" prefWidth="130.0"
                           promptText="Вартість" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                <TextField fx:id="discountTextField" maxWidth="130.0" minWidth="130.0" prefWidth="130.0"
                           promptText="Знижка (%)" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
                <TextField fx:id="billTextField" maxWidth="130.0" minWidth="130.0" prefWidth="130.0"
                           promptText="До оплати" GridPane.columnIndex="4" GridPane.rowIndex="1"/>
                <TextField fx:id="paidTextField" maxWidth="130.0" minWidth="130.0" prefWidth="130.0"
                           promptText="Сплачено" GridPane.columnIndex="5" GridPane.rowIndex="1"/>
            </children>
            <BorderPane.margin>
                <Insets bottom="30.0"/>
            </BorderPane.margin>
        </GridPane>
    </top>
</BorderPane>
